<Page x:Class="WpfApp1.CadastrarProduto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ControleEstoque">

    <Grid Background="White">
        <Viewbox Stretch="Fill">
            <Grid Width="800" Height="600">
                <Label Content="PRODUTO" HorizontalAlignment="Left" Margin="218,56,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
                <Label Content="QUANTIDADE" HorizontalAlignment="Left" Margin="193,100,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" RenderTransformOrigin="0.744,1.176"/>
                <Label Content="TAMANHO" HorizontalAlignment="Left" Margin="212,136,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" RenderTransformOrigin="0.617,0.524"/>
                <Button Content="ADICIONAR PRODUTO" HorizontalAlignment="Left" Margin="318,297,0,0" VerticalAlignment="Top" Height="24" Background="#FF242175" Foreground="White" RenderTransformOrigin="0.434,-2.167" Click="Button_Click"/>
                <Button Content="FINALIZAR" HorizontalAlignment="Left" Margin="252,341,0,0" VerticalAlignment="Top" Height="24" Width="143" Foreground="White" Background="#FF0E6313"/>
                <Button Content="CANCELAR" HorizontalAlignment="Left" Margin="413,341,0,0" VerticalAlignment="Top" Height="24" Width="71" Background="#FF8A1717" Foreground="White"/>
                <Label Content="PREÇO" HorizontalAlignment="Left" Margin="240,182,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
                <Label Content="COR" HorizontalAlignment="Left" Margin="256,225,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" RenderTransformOrigin="0.878,0.151"/>
                <ComboBox x:Name="corr" HorizontalAlignment="Left" Margin="295,226,0,0" VerticalAlignment="Top" Width="176" Height="26">
                    <ComboBoxItem Content="PRETO"/>
                    <ComboBoxItem Content="BRANCO"/>
                    <ComboBoxItem Content="AZUL"/>
                    <ComboBoxItem Content="LILAS"/>
                    <ComboBoxItem Content="ROXO"/>
                    <ComboBoxItem Content="CINZA"/>
                    <ComboBoxItem Content="VERDE"/>
                </ComboBox>
                <TextBox x:Name="quant" HorizontalAlignment="Left" Margin="295,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176" Height="24"/>
                <TextBox x:Name="prec" HorizontalAlignment="Left" Margin="295,184,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176" Height="24"/>
                <TextBox x:Name="prod" HorizontalAlignment="Left" Margin="295,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176" Height="24"/>
                <ComboBox x:Name="tamanh" HorizontalAlignment="Left" Margin="295,137,0,0" VerticalAlignment="Top" Width="176" Height="26">
                    <ComboBoxItem Content="33"/>
                    <ComboBoxItem Content="34"/>
                    <ComboBoxItem Content="35"/>
                    <ComboBoxItem Content="36"/>
                    <ComboBoxItem Content="37"/>
                    <ComboBoxItem Content="38"/>
                    <ComboBoxItem Content="39"/>
                    <ComboBoxItem Content="40"/>
                    <ComboBoxItem Content="41"/>
                    <ComboBoxItem Content="42"/>
                    <ComboBoxItem Content="43"/>
                </ComboBox>

            </Grid>
        </Viewbox>

    </Grid>
</Page>
