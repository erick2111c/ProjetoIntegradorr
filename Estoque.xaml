<Page x:Class="WpfApp1.gerencimaneto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="gerencimaneto">

    <Viewbox Stretch="Fill">
        <Grid Width="800" Height="450">
            <Grid.Background>
                <ImageBrush ImageSource="/Cadastro.png"/>
            </Grid.Background>
            <DataGrid x:Name="dgEstoque"
                  Margin="10,10,10,54"
                  AutoGenerateColumns="False"
                  
                  GridLinesVisibility="All" 
                  HorizontalGridLinesBrush="#FF444444"  VerticalGridLinesBrush="#FF444444"
                  
                  HeadersVisibility="All" 
                  ColumnWidth="*"
                  Background="White"
                  Foreground="Black"  
                  RowBackground="Black" 
                  AlternatingRowBackground="#FF0A0A0A">
                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Setter Property="Foreground" Value="White" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FF8C1A1A" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>

                    <DataGridTextColumn Header="ID"  
                                    Width="40"  
                                    Binding="{Binding Id}" />

                    <DataGridTextColumn Header="Item"  
                     Width="2*"  
                     Binding="{Binding Produto}" />

                    <DataGridTextColumn Header="Descrição"  
                                    Width="2*"  
                                    Binding="{Binding Descricao}" />

                    <DataGridTextColumn Header="Valor un."  
                                    Width="2*"  
                                    Binding="{Binding ValorUn}" />

                    <DataGridTextColumn Header="Quantidade"  
                                    Width="100"  
                                    Binding="{Binding Quantidade}" />

                    <DataGridTextColumn Header="ValorTotal"  
                                    Width="120"  
                                    Binding="{Binding ValorTotal}" />
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="VOLTAR" HorizontalAlignment="Left" Margin="18,407,0,0" VerticalAlignment="Top" Height="33" Width="82" FontSize="14" Background="#FF162C84" Foreground="White" Click="Button_Click" RenderTransformOrigin="0.127,1.792" BorderBrush="White"/>
            <Button x:Name="btnDelete" Content="EXCLUIR" HorizontalAlignment="Right" Margin="0,0,24,9" VerticalAlignment="Bottom" Click="btnDelete_Click" Height="33" Width="88" FontSize="14" Foreground="White" BorderBrush="White" Background="#FF9C2D2D"/>
        </Grid>
    </Viewbox>
</Page>