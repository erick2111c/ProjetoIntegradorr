<Page x:Class="WpfApp1.gerencimaneto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="gerencimaneto">

    <Grid>
        <DataGrid x:Name="dgUsuarios"
                  Margin="10"
                  AutoGenerateColumns="False"
                  
                  GridLinesVisibility="All" 
                  HorizontalGridLinesBrush="#FF444444"  VerticalGridLinesBrush="#FF444444"
                  
                  HeadersVisibility="All" 
                  ColumnWidth="*"
                  Background="White"
                  Foreground="Black"  
                  RowBackground="Black" 
                  AlternatingRowBackground="#FF0A0A0A">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridCell}">
                    <Setter Property="Foreground" Value="White" />
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FF8C1A1A" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>

            <DataGrid.Columns>

                <DataGridTextColumn Header="ID"  
                                    Width="40"  
                                    Binding="{Binding Id}" />

                <DataGridTextColumn Header="Descrição"  
                                    Width="2*"  
                                    Binding="{Binding Nome}" />

                <DataGridTextColumn Header="Valor de Venda"  
                                    Width="2*"  
                                    Binding="{Binding Email}" />

                <DataGridTextColumn Header="Entrada"  
                                    Width="1*"  
                                    Binding="{Binding Departamento}" />

                <DataGridTextColumn Header="Quantidade"  
                                    Width="100"  
                                    Binding="{Binding DataNascimento, StringFormat='dd/MM/yyyy'}" />

                <DataGridTextColumn Header="Saida"  
                                    Width="120"  
                                    Binding="{Binding DataCadastro, StringFormat='dd/MM/yyyy'}" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="VOLTAR" HorizontalAlignment="Left" Margin="20,401,0,0" VerticalAlignment="Top" Height="24" Width="71" FontSize="14" Background="#FF162C84" Foreground="White" Click="Button_Click" RenderTransformOrigin="0.127,1.792"/>
    </Grid>
</Page>